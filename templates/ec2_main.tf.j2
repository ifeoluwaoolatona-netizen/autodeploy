provider "aws" {
  region = "us-east-1"
}

resource "aws_instance" "app" {
  ami           = "ami-0c02fb55956c7d316" # Ubuntu 20.04 in us-east-1
  instance_type = "t2.micro"

  user_data = file("${path.module}/user_data.sh")

  tags = {
    Name = "autodeploy-ec2"
  }
}

output "public_ip" {
  value = aws_instance.app.public_ip
}
